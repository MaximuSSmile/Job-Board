<div class="container">
= simple_form_for(@job, html: { class: 'form-horizontal'}) do |f|
	=f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category"}, input_html: { class: "dropdown-toggle"}
	=f.input :title, lable: "Job Title", input_html: { class: "form-control"}
	=f.input :description, lable: "Job Description", input_html: { class: "form-control"}
	=f.input :company, lable: "Your Company", input_html: { class: "form-control"}
	=f.input :url, lable: "Link to Job", input_html: { class: "form-control"}
	%br/
	=f.button :submit

</div>